<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="jp.gr.procon.proconapp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".ProconApplication"
        android:allowBackup="true"
        android:icon="@mipmap/procon_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.NoticeListActivity">
        </activity>
        <activity android:name=".ui.activity.GamePhotoListActivity">
        </activity>
        <activity
            android:name=".ui.activity.GameResultListActivity">
        </activity>
        <activity
            android:name=".ui.activity.NoticeDetailActivity">
        </activity>
    </application>

</manifest>
