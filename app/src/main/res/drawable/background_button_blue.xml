<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/background_gray_blue_pressed"/>
            <corners android:radius="@dimen/spacing_medium"/>
            <stroke
                android:width="@dimen/spacing_medium"
                android:color="@android:color/transparent"/>
            <padding
                android:bottom="@dimen/spacing_micro"
                android:left="@dimen/spacing_medium"
                android:right="@dimen/spacing_medium"
                android:top="@dimen/spacing_micro"/>
        </shape>
    </item>

    <item><shape android:shape="rectangle">
        <solid android:color="@color/background_gray_blue"/>
        <corners android:radius="@dimen/spacing_medium"/>
        <stroke
            android:width="@dimen/spacing_medium"
            android:color="@android:color/transparent"/>
        <padding
            android:bottom="@dimen/spacing_micro"
            android:left="@dimen/spacing_medium"
            android:right="@dimen/spacing_medium"
            android:top="@dimen/spacing_micro"/>
    </shape>

    </item>
</selector>